    {
      "type": "discount",
      "name": "Discount code",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "discount_code",
          "label": "Discount code",
          "default": "DISCOUNTCODE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo strip",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "aside"
    ]
  }
